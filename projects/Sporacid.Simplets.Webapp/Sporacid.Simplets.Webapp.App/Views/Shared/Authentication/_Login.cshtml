@using Sporacid.Simplets.Webapp.App.Resources.Buttons
@using Sporacid.Simplets.Webapp.App.Resources.Labels
@using Sporacid.Simplets.Webapp.App.Resources.Messages
@using Sporacid.Simplets.Webapp.App.Resources.Titles

<div id="login" class="modal fade" data-bind="enterkey: login">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">@Html.Raw(TitleStrings.Login_MainTitle)</h4>
      </div>
      <div class="modal-body">
        <p class="login-error"></p>
        <form role="form">
          <div class="form-group">
            <label>@Html.Raw(LabelStrings.Login_CodeUniversel)</label>
            <input data-bind="value: username" class="form-control" placeholder="Votre code universel"/>
          </div>
          <div class="form-group">
            <label>@Html.Raw(LabelStrings.Login_MotDePasse)</label>
            <input data-bind="value: password" type="password" class="form-control" placeholder="Votre mot de passe"/>
          </div>
        </form>
        <p>@Html.Raw(MessageStrings.Login_IsStudentNotice)</p>
      </div>
      <div class="modal-footer">
        <button data-bind="click: login" type="submit" class="btn btn-primary">
          <i class="fa fa-2x fa-sign-in white vcenter"></i>
          <span class="vcenter">@Html.Raw(ButtonStrings.Authenticate)</span>
        </button>
      </div>
    </div>
  </div>
</div>